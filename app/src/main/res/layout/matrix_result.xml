                style="@style/result_view_cell"
                android:id="@+id/resultF5" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultF6" />
        </TableRow>
    </TableLayout>

    <!--CheckBox-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/memory_matrix"
        android:textAppearance="@style/Text"
        android:textColor="?attr/textViewColor"
        android:layout_marginTop="470dp"
        android:layout_marginStart="60dp"
        android:visibility="gone"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="470dp"
        android:layout_marginStart="290dp"
        android:visibility="gone"/>

    <Button
        android:layout_width="286dp"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/express_button"
        android:textAppearance="@style/Text"
        android:textColor="?attr/textViewColor"
        android:id="@+id/to_input_matrix"
        android:text="@string/back_to_menu"
        android:layout_marginTop="580dp"
        android:onClick="onClickToMenu"
        tools:ignore="OnClick"/>

</FrameLayout>