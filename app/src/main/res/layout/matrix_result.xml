<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor">

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="33dp"
        android:layout_marginStart="33dp"
        android:scaleType="centerCrop"
        android:background="?attr/backgroundColor"
        android:src="@drawable/ic_backspace"
        android:onClick="OnClickBackMatrix"
        android:contentDescription="@string/backspace"/>

    <TextView
        android:id="@+id/function_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_of_function"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="33dp"
        android:textAppearance="@style/Text"
        android:textColor="?attr/textViewColor"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="250dp">
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultA1" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultA2" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultA3" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultA4" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultA5" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultA6" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultB1" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultB2" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultB3" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultB4" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultB5" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultB6" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultC1" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultC2" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultC3" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultC4" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultC5" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultC6" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultD1" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultD2" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultD3" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultD4" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultD5" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultD6" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultE1" />
