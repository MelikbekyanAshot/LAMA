<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Text" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/for_text</item>
        <item name="android:fontFamily">@font/comfortaa_light</item>
    </style>

    <style name="TextDark" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/background</item>
        <item name="android:fontFamily">@font/comfortaa_light</item>
    </style>

    <style name="NavigationText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/for_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/comfortaa_light</item>
    </style>

    <style name="NavigationTextDark" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/comfortaa_light</item>
    </style>

</resources>