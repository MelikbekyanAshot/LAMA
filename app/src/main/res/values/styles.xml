<resources>
    <style name="CustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorPrimaryDark">@color/bar_theme_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorPrimaryDark">@color/background_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Text" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/for_text</item>
        <item name="android:fontFamily">@font/comfortaa_light</item>
    </style>

    <style name="TextDark" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/background</item>
        <item name="android:fontFamily">@font/comfortaa_light</item>
    </style>

    <style name="NavigationText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/for_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/comfortaa_light</item>
    </style>

    <style name="NavigationTextDark" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/comfortaa_light</item>
    </style>

</resources>